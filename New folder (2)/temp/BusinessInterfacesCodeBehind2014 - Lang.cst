			<% End if %>
			<% Next i %>  
                
				ShowGrid();					
            }
            else if (CustomPaging.ChangePage)
            {
                ShowGrid();
            }
            AppTypeId = byte.Parse(ddlAppType.SelectedValue);
        }
        catch (Exception ex)
